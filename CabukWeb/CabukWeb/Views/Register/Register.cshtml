@model CabukWeb.Models.Users
@{
    ViewData["Title"] = "Kullanıcı Kayıt";
    Layout = "~/Views/Shared/_Register-Login_Layout.cshtml";
}



<title>@ViewBag.Title</title>

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Yeni Kullanıcı Kayıt</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using(Html.BeginForm("Register","Register",FormMethod.Post)){
					<div class="form-row">
						<div class="col-md-6 mb-2">
							<label for="validationCustom01">İsim</label>

							@Html.TextBoxFor(x=>x.Name , new {@class="form-control"})
							@Html.ValidationMessageFor(x=>x.Name , "",new{@class="text-danger"})
						</div>
						<div class="col-md-6 mb-2">
							<label for="validationCustom02">Soy İsim</label>
							@Html.TextBoxFor(x=>x.LastName , new {@class="form-control"})
							@Html.ValidationMessageFor(x=>x.LastName , "",new{@class="text-danger"})
						</div>
						<div class="col-md-6 mb-2">
							<label for="validationCustom01">Kullanıcı Adı</label>
							@Html.TextBoxFor(x=>x.UserName , new {@class="form-control"})
							@Html.ValidationMessageFor(x=>x.UserName , "",new{@class="text-danger"})
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							@Html.TextBoxFor(x=>x.Password , new {@class="form-control"})
							@Html.ValidationMessageFor(x=>x.Password , "",new{@class="text-danger"})
						</div>
						<div class="col-md-6 mb-2">
							<label for="validationCustom01">E-mail</label>

							@Html.TextBoxFor(x=>x.Email , new {@class="form-control"})
							@Html.ValidationMessageFor(x=>x.Email , "",new{@class="text-danger"})

						</div>

						<div class="col-md-6 mb-2">
							<label for="validationCustom01">Adres</label>
							@Html.TextBoxFor(x=>x.Adress , new {@class="form-control"})
							@Html.ValidationMessageFor(x=>x.Adress , "",new{@class="text-danger"})

						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Telefon Numarası</label>

							@Html.TextBoxFor(x=>x.PhoneNumber , new {@class="form-control"})
							@Html.ValidationMessageFor(x=>x.PhoneNumber , "",new{@class="text-danger"})

						</div>
						<p>
							<div class="form-check">
								<input type="checkbox" class="form-check-input" id="exampleCheck1">
								<label class="form-check-label" for="exampleCheck1">Aydınlatma Metnini Okudum</label>
							</div>
						</p>
						<br />

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					
					<p><a href="@Url.Action("Login")"> Zaten Bir Hesabınız Var Mı ? Giriş Yapınız</a></p>
				}

			</div>
		</div>
	</div>
	<br />
	
</section>




