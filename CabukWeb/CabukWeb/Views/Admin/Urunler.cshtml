@using CabukWeb.Models

@model List<Products>

@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ürün Adı</th>
        <th>Ürün Durumu</th>
        <th>Ürün Fiyatı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Name</td>
            <td>@item.IsActive</td>
            <td>@item.Price</td>
            <td><a href="/Admin/UrunSil/@item.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-default" style="background-color:#dee61d">Detaylar</a></td>

        </tr>
    }
</table>

<a href="/Admin/YeniUrunler/" class="btn btn-primary">Yeni Ürün Ekle</a>

