
@{
    ViewData["Title"] = "Kayit";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Yeni Kullanıcı Kayıt</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				<form  method="post">
					<div class="form-row">
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">İsim</label>

							<input type="text" class="form-control" id="validationDefault01" name="Name" placeholder="" required="">
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom02">Soy İsim</label>
							<input type="text" class="form-control" id="validationDefault02" name="LastName" placeholder="" required="">
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Kullanıcı Adı</label>

							<input type="text" class="form-control" id="validationDefault01" name="UserName" placeholder="" required="">
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							<input type="password" class="form-control" id="password1" name="Password" placeholder="" required="">
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">E-mail</label>

							<input type="email" class="form-control" id="validationDefault01" name="Email" placeholder="" required="">
						</div>

						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Adres</label>

							<input type="text" class="form-control" id="validationDefault01" name="Adress" placeholder="" required="">
						</div>
						<div class="col-md-6 mb-3">
							<label for="validationCustom01">Telefon Numarası</label>

							<input type="number" class="form-control" id="validationDefault01" name="PhoneNumber" placeholder="" required="">
						</div>

					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p>
						<div class="form-check">
							<input type="checkbox" class="form-check-input" id="exampleCheck1">
							<label class="form-check-label" for="exampleCheck1">Aydınlatma Metnini Okudum</label>
						</div>
					</p>
					
				</form>

			</div>
		</div>
	</div>
	<br />
	<script>
		$('#btn1').click(function(){
			swal("Sitemizde verdiğiniz mail adresi üzerinde bilgi ve haber e-postaları spam  ölçüsüne varmadan gönderilmeye devam edicektir. Eğer e postanıza gelmesini istemiyorsanız lütfen kapatınız."
		})
	</script>
</section>



